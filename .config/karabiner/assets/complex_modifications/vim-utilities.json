  "rules": [
    {
      "description": "‚öíÔ∏èüåê j/k (Browser/Alacritty): also hides cursor (for Vimium/less)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j"
          },
          "to": [
            {
              "key_code": "j"
            },
            {
              "software_function": {
                "set_mouse_cursor_position": {
                  "x": "100%",
                  "y": "75%",
                  "screen": 0
                }
              }
            }
          ],
          "conditions": [
            {
              "value": 0,
              "type": "variable_if",
              "name": "LEADER_ACTIVE"
            },
            {
              "type": "frontmost_application_if",
              "file_paths": [
                "alacritty$",
                "Brave Browser.app"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k"
          },
          "to": [
            {
              "key_code": "k"
            },
            {
              "software_function": {
                "set_mouse_cursor_position": {
                  "x": "100%",
                  "y": "75%",
                  "screen": 0
                }
              }
            }
          ],
          "conditions": [
            {
              "value": 0,
              "type": "variable_if",
              "name": "LEADER_ACTIVE"
            },
            {
              "type": "frontmost_application_if",
              "file_paths": [
                "alacritty$",
                "Brave Browser.app"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "‚öíÔ∏è k+l / f+j (simultaneously): ‚å´ / ‚Üµ",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "k"
              },
              {
                "key_code": "l"
              }
            ]
          },
          "parameters": {
            "basic.simultaneous_threshold_milliseconds": 60
          },
          "to": [
            {
              "key_code": "delete_or_backspace"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "f"
              },
              {
                "key_code": "j"
              }
            ]
          },
          "parameters": {
            "basic.simultaneous_threshold_milliseconds": 100
          },
          "to": [
            {
              "key_code": "return_or_enter"
            },
            {
              "set_variable": {
                "name": "VIM_MODE",
                "value": 0
              }
            },
            {
              "set_notification_message": {
                "id": "vim-mode-notice",
                "text": ""
              }
            }
          ]
        }
      ]
    },
    {
      "description": "‚öíÔ∏è R-‚åò (tap): Focus Window & Hide Cursor",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_command"
          },
          "to": [
            {
              "key_code": "right_command"
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 250
          },
          "to_if_alone": [
            {
              "software_function": {
                "set_mouse_cursor_position": {
                  "x": "50%",
                  "y": "50%",
                  "screen": 0
                }
              }
            },
            {
              "key_code": "vk_none",
              "hold_down_milliseconds": 15
            },
            {
              "pointing_button": "button1"
            },
            {
              "key_code": "vk_none",
              "hold_down_milliseconds": 15
            },
            {
              "software_function": {
                "set_mouse_cursor_position": {
                  "x": "100%",
                  "y": "75%",
                  "screen": 0
                }
              }
            }
          ]
        }
      ]
    },
