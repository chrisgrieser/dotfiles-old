{
	"title": "CapsLock to Hyper-Esc",
	"version": "0.1",
	"maintainers": ["pseudometa"],
	"import-url": "karabiner://karabiner/assets/complex_modifications/import?url=https://raw.githubusercontent.com/BryanHoo/Capslock-X/main/capslock-x.json",
	"homepage": "https://github.com/chrisgrieser/dotfiles",
	"rules": [
		{
			"description": "CapsLock to Hyper/Escape",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "caps_lock",
						"modifiers": {
							"optional": ["any"]
						}
					},
					"to": [
						{
							"key_code": "right_shift",
							"modifiers": ["right_command", "right_control", "right_option"],
							"lazy": true
						}
					],
					"to_if_alone": [
						{
							"key_code": "escape"
						}
					],
					"parameters": {
						"basic.to_if_alone_timeout_milliseconds": 500
					}
				}
			]
		}
	]
}
