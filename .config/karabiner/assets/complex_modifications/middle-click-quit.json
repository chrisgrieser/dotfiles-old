{
	"title": "Middle-Click Quit",
	"version": "0.1",
	"maintainers": ["pseudometa"],
	"import-url": "karabiner://karabiner/assets/complex_modifications/import?url=https://github.com/chrisgrieser/dotfiles/blob/main/.config/karabiner/assets/complex_modifications/middle-click-quit.json",
	"homepage": "https://github.com/chrisgrieser/dotfiles/karabiner",
	"rules": [
		{
			"description": "Middle-Click quits application",
			"manipulators": [
				{
					"type": "basic",
					"from": {"pointing_button": "button3"},
					"to": [
						{
							"key_code": "q",
							"modifiers": ["right_command"]
						}
					]
				}
			]
		},
		{
			"description": "Tapping Right Mouse Button in Browser to open link in background (Safari / Brave)",
			"manipulators": [
				{
					"type": "basic",
					"from": {"pointing_button": "button2"},
					"to_if_held_down": [{"pointing_button": "button2"} ],
					"to": [{"pointing_button": "button3" } ],
					"conditions": [
						{
							"type": "frontmost_application_if",
							"bundle_identifiers": [
								"^com\\.brave\\.Browser$",
								"^com\\.apple\\.Safari$"
							]
						}
					],
					"parameters": {
						"basic.to_if_held_down_threshold_milliseconds": 75
					}
				}
			]
		}
	]
}
