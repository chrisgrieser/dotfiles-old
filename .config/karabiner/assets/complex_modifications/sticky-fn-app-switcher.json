{
	"title": "Sticky Fn App-Switcher",
	"version": "0.1",
	"maintainers": ["pseudometa"],
	"import-url": "karabiner://karabiner/assets/complex_modifications/import?url=https://github.com/chrisgrieser/dotfiles/blob/main/.config/karabiner/assets/complex_modifications/sticky-fn-app-switcher.json",
	"homepage": "https://github.com/chrisgrieser/dotfiles/karabiner",
	"rules": [
		{
			"description": "fn, afterwards {char}: switch/launch various apps",
			"manipulators": [
				{
					"type": "basic",
					"description": "set fn",
					"from": {"key_code": "fn" },
					"to": [
						{
						    "set_variable": {
						        "name": "STICKY-FN-TRIGGERED",
						        "value": "variable value"
						    }
						}
					],
					"conditions": [
						{
							"type": "variable_if",
							"name": "STICKY-FN-TRIGGERED",
							"value": false
						}
					]
				},
				{
					"type": "basic",
					"from": {"key_code": "c" },
					"to": [{"shell_command": "open -a 'BusyCal'"} ]
				},
				{
					"type": "basic",
					"from": {"key_code": "o" },
					"to": [{"shell_command": "open -a 'Obsidian'"} ]
				},
				{
					"type": "basic",
					"from": {"key_code": "d" },
					"to": [{"shell_command": "open -a 'Discord'"} ]
				},
				{
					"type": "basic",
					"from": {"key_code": "y" },
					"to": [{"shell_command": "open -a 'YouTube'"} ]
				},
				{
					"type": "basic",
					"from": {"key_code": "e" },
					"to": [{"shell_command": "open -a 'Sublime Text'"} ]
				},
				{
					"type": "basic",
					"from": {"key_code": "r" },
					"to": [{"shell_command": "open -a 'Drafts'"} ]
				},
				{
					"type": "basic",
					"from": {"key_code": "s" },
					"to": [{"shell_command": "open -a 'Slack'"} ]
				},
				{
					"type": "basic",
					"from": {"key_code": "m" },
					"to": [{"shell_command": "open -a 'Mimestream'"} ]
				},
				{
					"type": "basic",
					"from": {"key_code": "b" },
					"to": [{"shell_command": "open -a 'Brave Browser'"} ]
				},
				{
					"type": "basic",
					"from": {"key_code": "f" },
					"to": [{"shell_command": "open \"$HOME/Library/Mobile Documents/com~apple~CloudDocs/File Hub/\""} ]
				},
				{
					"type": "basic",
					"from": {"key_code": "k" },
					"to": [{"shell_command": "open -a 'Karabiner-Elements'"} ]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "k",
						"modifiers": {"mandatory": ["fn", "shift"] }
					},
					"to": [{"shell_command": "open -a 'Karabiner-EventViewer'"} ]
				},
				{
					"type": "basic",
					"from": {"key_code": "z" },
					"to": [{"shell_command": "open -a 'YouTube'"} ]
				},
				{
					"type": "basic",
					"from": {"key_code": "a" },
					"to": [{"shell_command": "open -a 'Alfred Preferences'"} ]
				},
				{
					"type": "basic",
					"from": {"key_code": "i" },
					"to": [{"shell_command": "open -a 'Inoreader'"} ]
				},
				{
					"type": "basic",
					"from": {"key_code": "t" },
					"to": [{"shell_command": "open -a 'BetterTouchTool'"} ]
				},
				{
					"type": "basic",
					"from": {"key_code": "p" },
					"to": [{"shell_command": "open -a 'Highlights'"} ]
				},
				{
					"type": "basic",
					"from": {"key_code": "g" },
					"to": [{"shell_command": "open -a 'Google Docs'"} ]
				},
				{
					"type": "basic",
					"from": {"key_code": "w" },
					"to": [{"shell_command": "open -a 'Microsoft Word'"} ]
				},
				{
					"type": "basic",
					"from": {"key_code": "v" },
					"to": [{"shell_command": "open -a 'VLC'"} ]
				},
				{
					"type": "basic",
					"from": {"key_code": "y" },
					"to": [{"shell_command": "open -a 'zoom.us'"} ]
				}
			]
		},
		{
			"description": "2x fn: Emoji inserter",
			"manipulators": [
				{
					"type": "basic",
					"from": {"key_code": "fn"},
					"to": [
						{
							"key_code": "spacebar",
							"modifiers": ["right_command", "right_control"]
						}
					],
					"conditions": [
						{
							"type": "frontmost_application_unless",
							"bundle_identifiers": ["^com\\.runningwithcrayons\\.Alfred$"]
						},
						{
							"type": "device_if",
							"description": "So fn from foot-pedal doesn't trigger emojis",
							"identifiers": [ {"is_pointing_device": false} ]
						}
					]
				}
			]
		}
	]
}
