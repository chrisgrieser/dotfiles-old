{
	"title": "Foot Pedal",
	"version": "0.1",
	"maintainers": ["pseudometa"],
	"import-url": "karabiner://karabiner/assets/complex_modifications/import?url=https://github.com/chrisgrieser/dotfiles/blob/main/.config/karabiner/assets/complex_modifications/foot-pedal.json",
	"homepage": "https://github.com/chrisgrieser/dotfiles/karabiner",
	"rules": [
		{
			"description": "Foot Pedal (Sublime/Obsidian): Forward-Delete, Rest: F17",
			"manipulators": [
				{
					"type": "basic",
					"from": {"key_code": "b"},
					"to": [{ "key_code": "delete_forward" } ],
					"conditions": [
						{
							"type": "device_if",
							"identifiers": [{ "product_id": 57382 } ]
						},
						{
							"type": "frontmost_application_if",
							"bundle_identifiers": [
								"^org\\.pqrs\\.Karabiner-EventViewer$",
								"^md\\.obsidian$",
								"^com\\.sublimetext\\.4$"
							]
						}
					]
				},
				{
					"type": "basic",
					"description": "so keyboard fn+backspace does not trigger insert mode change",
					"from": {
						"key_code": "delete_or_backspace",
						"modifiers": {"mandatory": ["fn"] }
					},
					"to": [
						{ "key_code": "right_arrow"},
						{ "key_code": "delete_or_backspace"}
					],
					"conditions": [
						{
							"type": "device_unless",
							"identifiers": [{ "product_id": 57382 } ]
						},
						{
							"type": "frontmost_application_if",
							"bundle_identifiers": [
								"^org\\.pqrs\\.Karabiner-EventViewer$",
								"^md\\.obsidian$",
								"^com\\.sublimetext\\.4$"
							]
						}
					]
				},
				{
					"type": "basic",
					"from": {"key_code": "b"},
					"to": [{ "key_code": "f17" } ],
					"conditions": [
						{
							"type": "device_if",
							"identifiers": [{ "product_id": 57382 } ]
						},
						{
							"type": "frontmost_application_unless",
							"bundle_identifiers": [
								"^org\\.pqrs\\.Karabiner-EventViewer$",
								"^md\\.obsidian$",
								"^com\\.sublimetext\\.4$"
							]
						}
					]
				}
			]
		}
	]
}
