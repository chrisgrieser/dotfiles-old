{
  "title": "ðŸ”˜ Utility Shortcuts",
  "version": "0.1",
  "maintainers": [
    "pseudometa"
  ],
  "import-url": "karabiner://karabiner/assets/complex_modifications/import?url=https://github.com/chrisgrieser/dotfiles/blob/main/.config/karabiner/assets/complex_modifications/utility-hotkeys.json",
  "homepage": "https://github.com/chrisgrieser/dotfiles/karabiner",
  "rules": [
    {
      "description": "ðŸ”˜ âŒ˜+J â†’ Expand Word",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "command"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "option"
              ]
            },
            {
              "key_code": "left_arrow",
              "modifiers": [
                "option",
                "shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^md\\.obsidian$",
                "^com\\.sublimetext",
                "^com\\.apple\\.finder$",
                "^com\\.iconfactory\\.Twitterrific"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "ðŸ”˜ âŒƒ+T â†’ Transpose Characters",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "t",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "shift"
              ]
            },
            {
              "key_code": "x",
              "modifiers": [
                "command"
              ]
            },
            {
              "key_code": "left_arrow"
            },
            {
              "key_code": "v",
              "modifiers": [
                "command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^md\\.obsidian$",
                "^com\\.sublimetext"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "ðŸ”˜ âŒƒ+W â†’ Delete Word (Vim: i_Ctrl-W)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "w",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace",
              "modifiers": [
                "option"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^md\\.obsidian$",
                "^com\\.sublimetext"
              ]
            }
          ]
        }
      ]
    }
  ]
}
