{
	"title": "Misc",
	"version": "0.1",
	"maintainers": ["pseudometa"],
	"import-url": "karabiner://karabiner/assets/complex_modifications/import?url=https://github.com/chrisgrieser/dotfiles/blob/main/.config/karabiner/assets/complex_modifications/misc.json",
	"homepage": "https://github.com/chrisgrieser/dotfiles/karabiner",
	"rules": [
		{
			"description": "One Stroke ^`´~ (German Layout)",
			"manipulators": [
				{
					"description": "forward-tick",
					"type": "basic",
					"from": {
						"key_code": "equal_sign"
					},
					"to": [
						{ "key_code": "equal_sign" },
						{ "key_code": "spacebar" }
					],
					"conditions": [
						{
							"type": "input_source_if",
							"input_sources": [{ "language": "^de$" } ]
						}
					]
				},
				{
					"description": "backtick",
					"type": "basic",
					"from": {
						"key_code": "equal_sign",
						"modifiers": {"mandatory": ["shift"] }
					},
					"to": [
						{ "key_code": "equal_sign", "modifiers": ["shift"] },
						{ "key_code": "spacebar" }
					],
					"conditions": [
						{
							"type": "input_source_if",
							"input_sources": [{ "language": "^de$" } ]
						}
					]
				},
				{
					"description": "tilde",
					"type": "basic",
					"from": {
						"key_code": "n",
						"modifiers": {"mandatory": ["option"] }
					},
					"to": [
						{ "key_code": "n", "modifiers": ["option"] },
						{ "key_code": "spacebar" }
					],
					"conditions": [
						{
							"type": "input_source_if",
							"input_sources": [{ "language": "^de$" }]
						},
						{
							"type": "frontmost_application_unless",
							"bundle_identifiers": [
								"^io\\.alacritty$",
								"^com\\.apple\\.Terminal$",
								"^md\\.obsidian$",
								"^com\\.sublimetext\\.4$"
							]
						}
					]
				},
				{
					"description": "^",
					"type": "basic",
					"from": {"key_code": "non_us_backslash" },
					"to": [
						{ "key_code": "non_us_backslash" },
						{ "key_code": "spacebar" }
					],
					"conditions": [
						{
							"type": "input_source_if",
							"input_sources": [{ "language": "^de$" }]
						},
						{
							"type": "frontmost_application_unless",
							"bundle_identifiers": [
								"^io\\.alacritty$",
								"^com\\.apple\\.Terminal$",
								"^md\\.obsidian$",
								"^com\\.sublimetext\\.4$"
							]
						}
					]
				}
			]
		},
		{
			"description": "Quicker MacPass",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "c",
						"modifiers": {"mandatory": ["command"] }
					},
					"to": [{"key_code": "c", "modifiers": ["command", "option"] } ]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "u",
						"modifiers": {"mandatory": ["command"] }
					},
					"to": [{"key_code": "c", "modifiers": ["command", "shift"] } ]
				}
			]
		},
		{
			"description": "⇧+⌫: ⌦",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "delete_or_backspace",
						"modifiers": {"mandatory": ["shift"] }
					},
					"to": [{ "key_code": "delete_forward"} ]
				}
			]
		},
		{
			"description": "R-⇧: search selected text / open URL",
			"manipulators": [
				{
					"type": "basic",
					"from": {"key_code": "right_shift"},
					"to": [{"key_code": "right_shift" } ],
					"to_if_alone": [
						{
							"key_code": "c",
							"modifiers": ["command"]
						},
						{ "key_code": "vk_none", "hold_down_milliseconds": 50 },
						{ "shell_command": "SEL=$(pbpaste) ; if [[ \"$SEL\" =~ ^[[:space:]]*http.*[[:space:]]*$ ]]; then open \"$(echo \"$SEL\" | sed 's/ //g')\" ; else open \"https://www.google.com/search?q=$SEL\" ; fi"}
						],
					"parameters": {
						"basic.to_if_alone_timeout_milliseconds": 250
					}
				}
			]
		}
	]
}
