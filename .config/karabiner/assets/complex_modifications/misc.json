    },
    {
      "description": "‚ìÇÔ∏èüî® Hammerspoon: ‚åòQ ‚Üí Close instead of Quit ",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": [
                "command"
              ]
            }
          },
          "to": [
            {
              "key_code": "w",
              "modifiers": [
                "command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.hammerspoon\\.Hammerspoon$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
