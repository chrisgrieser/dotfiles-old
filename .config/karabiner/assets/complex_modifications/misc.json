{
  "title": "‚ìÇÔ∏è Misc",
  "version": "2.1",
  "maintainers": [
    "pseudometa"
  ],
  "import-url": "karabiner://karabiner/assets/complex_modifications/import?url=https://github.com/chrisgrieser/dotfiles/blob/main/.config/karabiner/assets/complex_modifications/misc.json",
  "homepage": "https://github.com/chrisgrieser/dotfiles/karabiner",
  "rules": [
    {
      "description": "‚ìÇÔ∏è ¬ß ‚Üí | (+ US Layout); ‚å•3 for Paragraph Symbol",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "3",
            "modifiers": {
              "mandatory": [
                "shift"
              ]
            }
          },
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "^de$"
                }
              ]
            }
          ],
          "to": [
            {
              "select_input_source": {
                "input_source_id": "^com\\.apple\\.keylayout\\.US$"
              }
            },
            {
              "key_code": "vk_none",
              "hold_down_milliseconds": 20
            },
            {
              "key_code": "non_us_pound",
              "modifiers": [
                "shift"
              ]
            }
          ],
          "to_after_key_up": [
            {
              "select_input_source": {
                "input_source_id": "^com\\.apple\\.keylayout\\.ABC-QWERTZ$"
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "3",
            "modifiers": {
              "mandatory": [
                "option"
              ]
            }
          },
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "^de$"
                }
              ]
            }
          ],
          "to": [
            {
              "key_code": "3",
              "modifiers": [
                "shift"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "‚ìÇÔ∏è1Ô∏è‚É£ One Stroke ^`~ (German Layout)",
      "manipulators": [
        {
          "description": "backtick",
          "type": "basic",
          "from": {
            "key_code": "equal_sign",
            "modifiers": {
              "mandatory": [
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "equal_sign",
              "modifiers": [
                "shift"
              ]
            },
            {
              "key_code": "spacebar"
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "^de$"
                }
              ]
            }
          ]
        },
        {
          "description": "tilde",
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": [
                "option"
              ]
            }
          },
          "to": [
            {
              "key_code": "n",
              "modifiers": [
                "option"
              ]
            },
            {
              "key_code": "spacebar"
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "^de$"
                }
              ]
            },
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^md\\.obsidian$",
                "^com\\.sublimetext\\.4$"
              ]
            }
          ]
        },
        {
          "description": "^",
          "type": "basic",
          "from": {
            "key_code": "non_us_backslash"
          },
          "to": [
            {
              "key_code": "non_us_backslash"
            },
            {
              "key_code": "spacebar"
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "^de$"
                }
              ]
            },
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^md\\.obsidian$",
                "^com\\.sublimetext\\.4$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "‚ìÇÔ∏èüßë‚Äçüíª Alacritty/Terminal: ‚åòQ ‚Üí ‚åÉD (Quit on Process End)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": [
                "command"
              ]
            }
          },
          "to": [
            {
              "key_code": "d",
              "modifiers": [
                "control"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "file_paths": [
                "bin/alacritty$",
                "/System/Applications/Utilities/Terminal.app"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "‚ìÇÔ∏èüñä Highlights: ‚åò+L ‚Üí Show PDF in Finder",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "command"
              ]
            }
          },
          "to": [
            {
              "software_function": {
                "set_mouse_cursor_position": {
                  "x": "45%",
                  "y": "4%",
                  "screen": 0
                }
              }
            },
            {
              "pointing_button": "button2"
            },
            {
              "key_code": "down_arrow"
            },
            {
              "key_code": "return_or_enter"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^net\\.highlightsapp\\.universal$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "‚ìÇÔ∏èüèû YouTube: ‚åò+P ‚Üí Picture-in-Picture Mode",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [
                "command"
              ]
            }
          },
          "to": [
            {
              "software_function": {
                "set_mouse_cursor_position": {
                  "x": "50%",
                  "y": "50%",
                  "screen": 0
                }
              }
            },
            {
              "pointing_button": "button2"
            },
            {
              "pointing_button": "button2"
            },
            {
              "key_code": "vk_none",
              "hold_down_milliseconds": 50
            },
            {
              "key_code": "p"
            },
            {
              "key_code": "return_or_enter"
            },
            {
              "key_code": "vk_none",
              "hold_down_milliseconds": 800
            },
            {
              "key_code": "h",
              "modifiers": [
                "command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "file_paths": [
                "YouTube"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "‚ìÇÔ∏èüìñ Inoreader: v opens in background, switch jk & np",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "v"
          },
          "to": [
            {
              "key_code": "v"
            },
            {
              "key_code": "vk_none",
              "hold_down_milliseconds": 300
            },
            {
              "key_code": "h",
              "modifiers": [
                "command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "file_paths": [
                "Inoreader.app"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j"
          },
          "to": [
            {
              "key_code": "n"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "file_paths": [
                "Inoreader.app"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k"
          },
          "to": [
            {
              "key_code": "p"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "file_paths": [
                "Inoreader.app"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "n"
          },
          "to": [
            {
              "key_code": "j"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "file_paths": [
                "Inoreader.app"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "p"
          },
          "to": [
            {
              "key_code": "k"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "file_paths": [
                "Inoreader.app"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "‚ìÇÔ∏èüîë MacPass: ‚åò+c/u ‚Üí ‚åò‚å•+c/‚åò‚áß+c, then ‚åò+h",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [
                "command"
              ]
            }
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.hicknhacksoftware\\.MacPass$"
              ]
            }
          ],
          "to": [
            {
              "key_code": "c",
              "modifiers": [
                "command",
                "option"
              ]
            },
            {
              "key_code": "h",
              "modifiers": [
                "command"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "u",
            "modifiers": {
              "mandatory": [
                "command"
              ]
            }
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.hicknhacksoftware\\.MacPass$"
              ]
            }
          ],
          "to": [
            {
              "key_code": "c",
              "modifiers": [
                "command",
                "shift"
              ]
            },
            {
              "key_code": "h",
              "modifiers": [
                "command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "‚ìÇÔ∏èüìß Mimestream: R-Click opens link in background",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button2"
          },
          "to": [
            {
              "pointing_button": "button1"
            },
            {
              "key_code": "vk_none",
              "hold_down_milliseconds": 30
            },
            {
              "key_code": "tab",
              "modifiers": [
                "command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.mimestream\\.Mimestream$"
              ]
            }
          ]
        }
      ]
    },
    {
