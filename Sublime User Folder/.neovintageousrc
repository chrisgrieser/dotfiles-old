let mapleader=,

""""""""""""""""""""""
" < Clipboard
""""""""""""""""""""""
" yank to system clipboard
" set via setting: "vintageous_use_sys_clipboard": true,

" show register (i.e., clipboard history)
noremap <C-y> :reg<CR>

" Y consistent with D and C to the end of line
nnoremap Y y$

" always paste what was yanked, not what was deleted
nnoremap P "0p

" append to register
noremap gy "Yy
noremap gx "Yd

""""""""""""""""""""""
" < Search
""""""""""""""""""""""
set ignorecase
set smartcase
set incsearch
set hlsearch

" no modfier key for jumping to next word
noremap + *

" quicker find mode (by mirroring American keyboard layout on German keyboard layout)
noremap - /

" [M]ute search highlights
nnoremap <C-m> :nohlsearch<CR>

""""""""""""""""""""""
" < Nagivation
""""""""""""""""""""""

" Have j and k navigate visual lines rather than logical ones
nnoremap j gj
nnoremap k gk

" HJKL behaves like hjkl, but bigger distance (best used with scroll offset plugin)
nnoremap H ^
vnoremap H ^
nnoremap L $
vnoremap L $
nnoremap J 7j
vnoremap J 7j
nnoremap K 7k
vnoremap K 7k

" Hard Mode: Turn off arrow keys for learning
" needs a remap, since unmap does not work on
" builtin keys, "noop" being non-existent command
nnoremap <Right> <Nop>
nnoremap <Left> <Nop>
nnoremap <Up> <Nop>
nnoremap <Down> <Nop>
vnoremap <Right> <Nop>
vnoremap <Left> <Nop>
vnoremap <Up> <Nop>
vnoremap <Down> <Nop>

" Goto Mark
nnoremap Ã¶ `

" Sublime Linter Errors
nnoremap gl ]l
nnoremap gL [l

""""""""""""""""""""""
" < g commands
""""""""""""""""""""""

" [g]oto [d]efinition
nnoremap gd :LspSymbolDefinition side_by_side=false<CR>
nnoremap gD :LspSymbolDefinition side_by_side=true<CR>

" Markdown: [g]oto footnote [d]efinition (and back)
noremap g<M-d> :MdeMagicFootnotes<CR>h<Esc>

" [g]oto [s]ymbol
noremap gs :ShowOverlay overlay=goto text=@<CR>

" [g]oto [r]egion (via comment marks plugin)
noremap gr :GotoComment<CR>

" [g]oto [o]pen file (= Quick Switcher)
noremap go :OpenBrowse<CR>

" [g]oto [f]ollow link under cursor
noremap gf :OpenUrlUnderCursor<CR>

""""""""""""""""""""""
" < Indentation
""""""""""""""""""""""

" Make indention work like in other editors
nnoremap <Tab> >>
nnoremap <S-Tab> <<
vnoremap <Tab> >gv
vnoremap <S-Tab> <gv

noremap Â° =

""""""""""""""""""""""
" < Editing
""""""""""""""""""""""

""""""""""""""""""""""
" << General Editing
""""""""""""""""""""""

" don't save small deletion in the register
nnoremap x "_x

" UNDO consistently on one key
nnoremap U <C-r>
vnoremap U <C-r>

" CASE SWITCH (added h for vertical navigation)
nnoremap Ãœ ~h
" Switch Case of first letter of the word = (toggle between Capital and lower case)
nnoremap Ã¼ mzlblgueh~`z

" TRANSPOSE
" (insert mode done via Sublime's build in command imap <C-t> xph)
" current & next char
nnoremap Ã¤ xp
" current & previous char
nnoremap Ã„ xhhp
" current & next word
nnoremap Ã– dawelpb

" CSS: double/remove [c]lass under cursor
nnoremap <leader>c mzlEF.yEEp`z
nnoremap <leader>C lF.d/[.\s]<CR>

" CSS: Important Switcher
nnoremap <leader>i :ImportantSwitcher<CR>

""""""""""""""""""""""
" << Line-Based Editing
""""""""""""""""""""""

" [M]erge lines
noremap M J

" Duplicate Selection
vnoremap <C-d> y'>p

" allows Double Enter to add new line and indent bullet points
nnoremap <CR> A

" Add Blank Line above/below
nnoremap = mzO<Esc>`z
nnoremap _ mzo<Esc>`z

" Append punctuation to end of line
nnoremap <leader>, mzA,<Esc>`z
nnoremap <leader>; mzA;<Esc>`z
nnoremap <leader>. mzA.<Esc>`z
nnoremap <leader>" mzA"<Esc>`z
nnoremap <leader>' mzA'<Esc>`z
nnoremap <leader>: mzA:<Esc>`z
nnoremap <leader>) mzA)<Esc>`z
nnoremap <leader>( mzA(<Esc>`z
nnoremap <leader>] mzA]<Esc>`z
nnoremap <leader>[ mzA[<Esc>`z
nnoremap <leader>{ mzA{<Esc>`z
nnoremap <leader>} mzA}<Esc>`z

" Prepend (Markdown Syntax)
nnoremap <leader>- mzI- <Esc>`z
nnoremap <leader>< mzI> <Esc>`z
nnoremap <leader>> mzI> <Esc>`z

" Remove last character from line
nnoremap X mz$"_x`z

" Swap up/down (vim.unimpaired)
noremap <Up> [e
noremap <Down> ]e

""""""""""""""""""""""
" < Text Objects
""""""""""""""""""""""

" Change Word/Selection
nnoremap <Space> "_ciw
vnoremap <Space> "_c

" Delete Word/Selection
nnoremap <S-Space> "_daw
vnoremap <S-Space> "_d

" Yank Word/Selection (alt+space)
nnoremap <M-Space> yiw
vnoremap <M-Space> "vy

" [R]eplace Word with register content
nnoremap R viw"0p
vnoremap R "0P

" [Â§]entence (`vas` emulation)
nnoremap Â§ v(o)h

